@model IEnumerable<HotelApplication.Models.Client>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Клиенты</title>
</head>
<body>
<h3>Клиенты гостиницы</h3>
<hr/>
<table>
    <thead>
    <tr>
        <th>#</th>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Паспортные данные</th>
        <th>Примечания</th>
    </tr>
    </thead>
    <tboy>
        @foreach (var client in Model)
        {
            <tr>
                <th>@client.Id</th>
                <th>@client.LastName</th>
                <th>@client.FirstName</th>
                <th>@client.Patronymic</th>
                <th>@client.PassportData</th>
                <th>@client.Notes</th>
            </tr>
        }
    </tboy>
</table>
</body>
</html>